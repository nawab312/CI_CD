pipeline {
    agent any
    parameters {
        choice(name: 'SKIP_STAGES', choices: ['None', 'Build', 'Test', 'Deploy'], description: 'Select a Stage to Skip')
    }
    stages {
        stage('Build') {
            when {
                expression { params.SKIP_STAGES != 'Build' }
            }
            steps {
                echo "Building"
            }
        }
        stage('Test') {
            when {
                expression { params.SKIP_STAGES != 'Test' }
            }
            steps {
                echo "Testing"
            }
        }
        stage('Deploy') {
            when {
                expression { params.SKIP_STAGES != 'Deploy' }
            }
            steps {
                echo "Deploying"
            }
        }
    }
}
